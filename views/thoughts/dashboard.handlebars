<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Create a Thought</a>
    </div>

    <h3> Your thoughts</h3>

    <ul>
        {{#each thought}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/thoughts/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
    {{#if emptyThought}}
    <p>There is no Thoughts </p>
    {{/if}}
</div>